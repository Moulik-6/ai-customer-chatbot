# Environment variables template for HF Spaces
# Copy values to HF Space secrets instead of storing in .env

# Hugging Face API Configuration
HUGGINGFACE_API_KEY="your_token_here"
HUGGINGFACE_API_BASE="https://router.huggingface.co/hf-inference/models"

# Model Configuration
MODEL_TYPE="generation"
HUGGINGFACE_MODEL="google/flan-t5-xl"
MOCK_MODE="false"
PORT="7860"
FILE_ENV="production"
USE_LOCAL_MODEL="true"

# Supabase Database Configuration (REQUIRED for products & logging)
# Get these from: https://app.supabase.com/project/_/settings/api
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_KEY="your-anon-public-key-here"

